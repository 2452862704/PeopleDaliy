<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <TextView
        android:id="@+id/news2_title"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="19sp"
        android:text="sadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasd"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="11dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news2_img1" />
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="11dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news2_img2" />
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="11dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news2_img3" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/news2_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:text="sadasd"
            android:textColor="@color/black1" />
        <TextView
            android:id="@+id/news2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11sp"
            android:layout_marginLeft="9dp"
            android:text="sadasd"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/news2_author"
            android:textColor="@color/black1" />
    </RelativeLayout>
</LinearLayout>