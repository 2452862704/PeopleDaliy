<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:id="@+id/comment_item_head_img"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_item_fabulous_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_item_head_img"
            android:layout_toLeftOf="@id/comment_item_fabulous_tv"
            android:id="@+id/comment_item_name_tv"
            android:text="昵称" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_item_head_img"
            android:layout_below="@id/comment_item_name_tv"
            android:id="@+id/comment_item_time_tv"
            android:layout_marginTop="3dp"
            android:text="3小时前" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comment_item_time_tv"
            android:layout_below="@id/comment_item_name_tv"
            android:layout_toLeftOf="@id/comment_item_fabulous_tv"
            android:id="@+id/comment_item_address_tv"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="11dp"
            android:text="北京" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:id="@+id/comment_item_values_tv"
        android:text="hahahas"
        />
</LinearLayout>