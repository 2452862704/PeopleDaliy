<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="81dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="71dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="9dp"
        android:layout_centerVertical="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="11dp"
        android:id="@+id/news1_card" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news1_img" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_toLeftOf="@id/news1_card"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/news1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasd"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/news1_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11sp"
            android:text="sadasd"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black1" />
        <TextView
            android:id="@+id/news1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="11sp"
            android:text="sadasd"
            android:layout_marginLeft="9dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/news1_author"
            android:textColor="@color/black1" />
    </RelativeLayout>

</RelativeLayout>