<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="121dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_centerVertical="true"
            android:id="@+id/follow_item_head_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/follow_item_name_tv"
            android:layout_toRightOf="@id/follow_item_head_img"
            android:layout_marginLeft="11dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/follow_item_value_tv"
            android:layout_toRightOf="@id/follow_item_head_img"
            android:layout_below="@id/follow_item_name_tv"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="11dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/follow_item_rv"
        android:layout_width="match_parent"
        android:layout_height="81dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="11dp"
            android:id="@+id/follow_item_card" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/follow_item_img" />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_toLeftOf="@id/follow_item_card"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/follow_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasdsadasd"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/follow_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:text="sadasd"
                android:textColor="@color/black1"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>