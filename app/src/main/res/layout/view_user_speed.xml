<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <TextView
                    android:id="@+id/user_sign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/user_sign_bg"
                    android:text="已签到"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:id="@+id/user_sign_title_tv"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:text="您已获得首签" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_sign_title_tv"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/red"
                    android:textSize="11dp"
                    android:text="断签需要重新累计" />
            </RelativeLayout>
            <com.example.peopledaily.widget.TimerLinView
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>