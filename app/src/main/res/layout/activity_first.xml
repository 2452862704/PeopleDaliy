<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frame_linear"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/frame_nav_linear">
        <com.example.peopledaliy.widget.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frame_news_btn"
            app:selflag="true"></com.example.peopledaliy.widget.BottomButton>
        <com.example.peopledaliy.widget.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frame_pepole_btn"
            app:selflag="false"></com.example.peopledaliy.widget.BottomButton>
        <com.example.peopledaliy.widget.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frame_video_btn"
            app:selflag="false"></com.example.peopledaliy.widget.BottomButton>
        <com.example.peopledaliy.widget.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frame_live_btn"
            app:selflag="false"></com.example.peopledaliy.widget.BottomButton>
        <com.example.peopledaliy.widget.BottomButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/frame_user_btn"
            app:selflag="false"></com.example.peopledaliy.widget.BottomButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/frame_nav_linear"
        android:id="@+id/fragment_linear"></LinearLayout>
</RelativeLayout>